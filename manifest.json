{
  "Name": "Steam Big Picture Controller",
  "Version": "1.0.2",
  "Author": "Jase",
  "Description": "Smart Steam launcher with Big Picture mode toggle and window management",
  "Category": "Steam Big Picture Controller",
  "CategoryIcon": "images/category-icon",
  "Icon": "images/plugin-icon",
  "URL": "https://github.com/sirjmann92/streamdeck-bp-plugin",
  "UUID": "com.jase.steambp",
  "CodePath": "bin/plugin.js",
  "CodePathWin": "bin/plugin.js",
  "SDKVersion": 3,
  "Software": {
    "MinimumVersion": "6.9"
  },
  "OS": [
    {
      "Platform": "windows",
      "MinimumVersion": "10"
    }
  ],
  "Nodejs": {
    "Version": "20",
    "Debug": "enabled"
  },
  "Actions": [
    {
      "Name": "Steam Big Picture Toggle",
      "UUID": "com.jase.steambp.toggle",
      "Icon": "images/action-icon",
      "Tooltip": "Launch Steam, toggle Big Picture mode, or exit",
      "States": [
        {
          "Image": "images/state-off",
          "TitleAlignment": "middle",
          "FontSize": 12
        },
        {
          "Image": "images/state-on",
          "TitleAlignment": "middle",
          "FontSize": 12
        },
        {
          "Image": "images/state-bigpicture",
          "TitleAlignment": "middle",
          "FontSize": 12
        }
      ],
      "SupportedInMultiActions": false,
      "PropertyInspectorPath": "propertyinspector/index.html",
      "Controllers": ["Keypad"],
      "UserTitleEnabled": false
    }
  ]
}
